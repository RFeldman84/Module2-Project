<div class="form-page log">
    <div class="log-icon-flex">

            <div>
            <h2 class="head">Sign up</h2>
            </div>
        <div class="row form-row">
            <div class="col-md-12">
            <form class="add-form log" action="/signup" method="POST">
                <div class="form-group">
                <label> Username:
                    <input class="form-control" type="text" name="username">
                </label>
                </div>
                <div class="form-group">
                <label> Email:
                    <input class="form-control" type="email" name="email">
                </label>
                </div>
                <div class="form-group">
                <label> Password:
                    <input class="form-control" type="password" name="userPassword">
                </label>
                </div>
                <button class="btn" type="submit">Sign up</button>

                <br />
                {{#if errorMessage}}
                <i style="background-color: red;">*{{errorMessage}}</i>
                {{/if}}

            </form>
            </div>
        </div>
    </div>
</div>