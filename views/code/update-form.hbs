<h2>EDIT RESOURCE INFO</h2>

<div class="row form-row ">
  <div class="col-md-12">
    <form action="/{{foundCode.id}}/edit" method="POST">
      <div class="form-group">
        <label> Main Language: <i style="color: red">*required</i>
          <input required class="form-control" type="text" name="lang" value="{{foundCode.lang}}">
        </label>
      </div>
      <div class="form-group">
        <label> Language Topic/Library/"Sub-Language":
          <input type="text" name="topic" class="form-control" value="{{foundCode.topic}}">
        </label>
      </div>
      <div class="form-group">
        <label>Resource Title: <i style="color: red">*required</i>
          <input required type="text" name="title" class="form-control" value="{{foundCode.title}}" />
        </label>
      </div>
      <div class="form-group">
        <label> Description/Keywords/#hashtags:
          <textarea class="form-control" name="description" cols="30" rows="4">{{foundCode.description}}</textarea>
        </label>
      </div>
      <div class="form-group">
        <input type="hidden" name="referer" value="{{referer}}">
      </div>
      <button type="submit" class="btn btn-primary">UPDATE</button>
</div>