<h2>NEW PICTURE LANG: </h2>
<div class="row form-row ">
  <div class="col-md-12">
    <form action="/languages/newPic/add" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label> Main Language:
          <input class="form-control" type="text" name="lang" value="{{lang}} "placeholder="python C# shell SQL javascript">
        </label>
        {{#if errorMessage}}
        <i style="color: red">**required</i>
        {{else}} <i>*required</i>
        {{/if}}
      </div>
      <div class="form-group">
        <label> Language Topic/Library/"Sub-Language":
          <input type="text" name="topic" class="form-control" value="{{topic}}"
            placeholder="function sort canvas jquery Django react boost">
        </label>
      </div>
      <div class="form-group">
        <label>Resource Title:
          <input type="text" name="title" class="form-control" value="{{title}}" />
        </label>
        {{#if errorMessage}}
        <i style="color: red">**required</i>
        {{else}} <i>*required</i>
        {{/if}}
      </div>
      <div class="form-group">
        <label> Description/Keywords/#hashtags:
          <textarea class="form-control" name="description" cols="30" rows="4">{{description}}</textarea>
        </label>
      </div>
      <div class="form-group">
        <label> Image:
          <input type="file" name="image" class="form-control-file" />
        </label>
        <br>
        {{#if errorMessage}} <i>*image JPEG/PNG/SVG/GIF/...(up to 10MB)</i><i style="color: red"> **required</i>
        {{else}}{{#if errorImg}}
        <i style="color: red">*{{errorImg}}</i>
        {{else}} <i>*image JPEG/PNG/SVG/GIF/...(up to 10MB)</i>
        {{/if}} 
        {{/if}}
      </div>
      <div hidden class="form-group">
        <input type="hidden" name="urlType" value="picture">
        <input type="hidden" name="resType" value="code">
      </div>
      <br>
      <button type="submit" class="btn btn-primary">ADD RESOURCE</button>
       <br>
      {{#if errorMessage}} 
      <i style="color: red">*please fill in ALL required fields</i>
      {{/if}}
    </form>
  </div>
</div>

