{{#if userInSession.cwName}}
<div>
  <button  class="none-btn"><a href="/languages/my-katas"><img width="55vw"
        src="/images/codewars-logo.png" alt="codewars logo"></a></button>
</div>
{{else}}
<div>
  <form action="/languages/add-cw-user" method="POST" class="form-inline row">
    <div class="form-group ">
      <input required type="text" name="cwName" placeholder="Codewars Username?" class="form-control-sm">
      <button type="submit" class="btn btn-sm blue-btn btn-primary">ADD</button>
    </div>
  </form>
