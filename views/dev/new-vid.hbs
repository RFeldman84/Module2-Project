
<hr>


<h5>NEW YouTube VIDEO DEV:</h5>
<div class="row">
  <div class="col-md-6">
    <form action="/dev/newVid/add" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label> Main Topic:
          <input class="form-control" type="text" name="lang">
        </label>
        <i>*required</i>
      </div>
      <div class="form-group">
        <label> Sub Topic:
          <input type="text" name="topic" class="form-control">
        </label>
      </div>
      <div class="form-group">
        <label>Resource Title:
          <input type="text" name="title" class="form-control" />
        </label>
        <i>*required</i>
      </div>
      <div class="form-group">
        <label> Description/Keywords/#hashtags:
          <textarea class="form-control" name="description" cols="30" rows="4"></textarea>
        </label>
      </div>

      <div class="form-group">
        <label> YouTube Url:
          <input class="form-control" type="text" name="vidUrl" placeholder="ex. https://youtu.be/....">
        </label>
        {{#if errorInput}}
        <i style="color: red">*{{errorInput}}</i>
        {{else}} <i>*required</i>
        {{/if}}
        <img src="/images/youtube-share.png" height="35px" alt="youtube share link">
        <br>
        <small><i>**COPY LINK FROM SHARE DROPDOWN**</i></small>
      </div>
      <input type="hidden" name="urlType" value="video">
      <input type="hidden" name="resType" value="dev">
      <button type="submit" class="btn btn-primary">ADD RESOURCE</button>
      <br>
      <br>
      {{#if errorMessage}}
      <i style="color: red"> *{{errorMessage}}</i>
      {{/if}}
    </form>
  </div>
</div>